<div class="row">
  <div class="m-5 col-xl-9">
    <h3 class="title_h3 bg-light w-25"><strong>マイページ</strong></h3>
        <table class="table table-bordered table-condensed">
            <p>
              <strong class="information-link">登録情報</strong>
              <%= link_to " 編集する", users_edit_path(current_user.id), class: "glyphicon glyphicon-pencil btn btn-success" %>
            </p>
            
            <tr>
                <td class="col-xs-2">氏名</td>
                <td><%= @user.name %></td>
            </tr>

            <tr>
                <td class="col-xs-2">メールアドレス</td>
                <td><%= @user.email %></td>
            </tr>
            
            <tr>
                <td class="col-xs-2">自己紹介文</td>
                <td><%= @user.introduction %></td>
            </tr>            
        </table>
  <div>
</div>