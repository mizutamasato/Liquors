<div class="container my-5">
  <h4><strong>レビューを投稿する</strong></h4><br>
     
  <div class="row">
    <div class="mt-5 col-md-10 ">
      <%= form_with model: @review, url: reviews_path(review_id: @review.id) do |f| %>
        <%= f.label :name, '商品名', class:'col-md-6 col-form-label' %>
        <%= f.text_field :name, class: "form-control" %>
      
        <%= f.label  '画像', class:'col-md-10 col-form-label' %>
        <%= f.file_field :image, accept: "image/*" %>
      
        <%= f.label :price, '価格', class:'col-md-10 col-form-label' %>
        <%= f.text_field :price, class: "form-control" %>

        <%= f.label :explanation, 'レビュー内容 ', class:'col-md-10 col-form-label' %>
          <%= f.text_area :explanation, class: "form-control", rows: "8", 
          #placeholder 入力欄にある淡い灰色のテキスト
            placeholder:'気軽にレビューを書いてください！ただし、節度とマナーを守ったうえで！！' %>

      <div class="form-group">
          <%= f.submit '投稿する', class:"btn btn-success" %>
      </div>
  <% end %>
  </div>
</div>