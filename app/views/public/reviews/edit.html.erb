<div class="row">
  <div class="col-md-8 offset-md-1 my-3">
      <h2 class = "bg-light w-50"><%= @review.user.name %></h2>
      
       <%= form_for(@review, url: review_path) do |f| %>
        <table class="row table">
          <tr>
            <th>氏名</th>
            <td><%= @review.user.name %></td>
          </tr>

          <tr>
            <th>画像</th>
            <td><%= image_tag @review.image %></td>
          </tr>

          <tr>
            <th>価格</th>
            <td>約<%= @review.price %>円</td>
          </tr>

          <tr>
            <th><%= f.label :レビュー %></th>
            <td><%= f.text_area :explanation , class: "form-control", rows: "8" %></td>
          </tr>
        </table>

      <div class="row text-right mb-5">
        <%= f.submit "変更を保存する" ,class: "btn btn-success " %>
      </div>
      <% end %>
  </div>
</div>

