 <div class="row">
  <div class="col-md-8 offset-md-1 my-3">
    <h2 class="head-line title_h2 text-center bg-light w-50 mx-auto"><%= @user.name + @user.name %>さんの会員情報編集</h2>
      
   <%= form_for(@user, url: admin_users_path) do |f| %>

  <table class="row table">
    <tr>
      <th class="col-xs-2"><%= f.label :会員ID %></th>
      <td class="col-xs-10"><%= f.text_field :id  , class:"form-control"%></td>
    </tr>

    <tr>
      <th><%= f.label :氏名 %></th>
      <td><%= f.text_field :name, class:"form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email , class:"form-control"%></td>
    </tr>

    <tr>
      <th><%= f.label :自己紹介文 %></th>
      <td><%= f.text_field :introduction , class:"form-control"%></td>
    </tr>
    <tr>
      <th><%= f.label :会員ステータス %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "退会" %>
      </th>
    </tr>
  </table>


      <div class="row text-right mb-5">
        <%= f.submit "変更を保存する" ,class: "btn btn-success " %>
      </div>
  <% end %>